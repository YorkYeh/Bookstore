<%= link_to '新增書籍', new_book_path ,class: "action-btn"%>
<%= link_to '購物車', cart_path ,class: "action-btn"%>

<div class="overflow-x-auto">
  <table class="table table-zebra">
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= link_to '加到購物車', add_cart_path(book), data: { turbo_method: :post }, class:'add-btn' %></td>
        <td><%= book.name %></td>
        <td><%= book.description %></td>
        <td><%= book.price %></td>
        <td>
          <%= link_to '更新', edit_book_path(book) ,class:'action-btn'%>
          <%= link_to '刪除', book_path(book),data: { turbo_method: 'delete', turbo_confirm: '確認刪除?' } ,class:'action-btn' %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>